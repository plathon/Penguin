{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "noImplicitThis": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@entities/*": [
        "./src/entities/*"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@validations/*": [
        "./src/validations/*"
      ]
    }
  }
}