{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": [
      "./src/@types",
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@entities/*": [
        "./src/entities/*"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@validations/*": [
        "./src/validations/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}